<header class="navbar navbar-expand-lg navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", '#', id: "logo", class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <nav class="ms-auto">
        <ul class="nav navbar-nav">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Help", help_path, class: "nav-link" %></li>
          <% if logged_in? %>
            <li class="nav-item"><%= link_to "Users", '#', class: "nav-link" %></li>
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Account
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user, class: "dropdown-item" %></li>
                <li><%= link_to "Settings", '#', class: "dropdown-item" %></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="nav-item"><%= link_to "Log in", login_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
